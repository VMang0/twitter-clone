    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.3",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vite-plugin-svgr": "^4.2.0"
